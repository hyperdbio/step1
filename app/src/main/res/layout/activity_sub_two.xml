<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubTwoActivity">

    <TextView
        android:id="@+id/savedTv"
        android:layout_width="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/inputEdt"
        android:layout_marginTop="40dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:textColor="#204996"
        android:text="TextView" />

    <EditText
        android:id="@+id/inputEdt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/savedTv"
        app:layout_constraintBottom_toTopOf="@id/saveBtn"
        android:layout_margin="20dp"
        android:ems="20"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:hint="inputEdt" />

    <Button
        android:id="@+id/saveBtn"
        android:layout_marginTop="15dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEdt"
        android:text="saveBtn" />
        android:background="#00FDCC"
        android:textColor="#204996"


</androidx.constraintlayout.widget.ConstraintLayout>